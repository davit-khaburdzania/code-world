<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="table-responsive">
      <%- if @item_questions.count > 0 %>
        <table class="table table-striped">
          <thead>
            <tr> 
              <th>Question</th>
            </tr>
          </thead>
          <tbody>
            <% @item_questions.each do |q| %>
            <tr>
              <td>
                <%= q.title %>
              </td>  
            </tr> 
            <%end%>
          </tbody>
        </table>
      <% else %>
        No Questions added
      <% end %>
    <div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <header>
      <h2>Add New Question</h2>
    </header>
      <%= form_for @item_question do |f| %>

        <%= f.label :title, :class => "label" %><br>
        <%= f.text_field :title, :placeholder => 'title', :class => 'form-control' %><br>

        <div class="row">
          <div class="col-md-10">
            <label for="username">Question 1</label>
            <input type="text" name="item_question[question_1]" class="form-control" placeholder="answer" required autofocus>
          </div>
          <div class="col-md-2">
            <label for="username">Correct</label><br>
            <input type="radio" name="item_question[radio][]" value="1" placeholder="answer" required autofocus>
          </div>
        </div>
        <br/>
        <div class="row">
          <div class="col-md-10">
            <label for="username">Question 2</label>
            <input type="text" name="item_question[question_2]" class="form-control" placeholder="answer" required autofocus>
          </div>
          <div class="col-md-2">
            <label for="username">Correct</label><br>
            <input type="radio" name="item_question[radio][]" value="2" placeholder="answer" required autofocus>
          </div>
        </div>
        <br/>
        <div class="row">
          <div class="col-md-10">
            <label for="username">Question 3</label>
            <input type="text" name="item_question[question_3]" class="form-control" placeholder="answer" required autofocus>
          </div>
          <div class="col-md-2">
            <label for="username">Correct</label><br>
            <input type="radio" name="item_question[radio][]" value="3" placeholder="answer" required autofocus>
          </div>
        </div>
        <br/>
        <div class="row">
          <div class="col-md-10">
            <label for="username">Question 4</label>
            <input type="text" name="item_question[question_4]" class="form-control" placeholder="answer" required autofocus>
          </div>
          <div class="col-md-2">
            <label for="username">Correct</label><br>
            <input type="radio" name="item_question[radio][]" value="4" placeholder="answer" required autofocus>
          </div>
        </div>
        <br/>
        <p>
          <%= f.submit 'Add Question', :class => 'btn btn-primary' %>
          <a href="/" class="btn btn-success"> Done Editing </a>
        </p>

      <% end %>
  </div>
</div>